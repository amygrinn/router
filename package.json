{
  "name": "@tygr/router",
  "version": "1.0.4",
  "description": "Router for tygr",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tylergrinn/tygr-router.git"
  },
  "author": "Tyler Grinn",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s clean ts demo",
    "clean": "rimraf lib dist",
    "demo": "webpack --config demo/webpack.config",
    "demo:w": "webpack serve --config demo/webpack.config",
    "lint": "npm run lint:fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "mocha": "mocha tests/**/*.spec.js --no-colors --exit",
    "performance": "webpack --config performance/webpack.config",
    "prettier": "npm run prettier:fix",
    "prettier:check": "prettier -c .",
    "prettier:fix": "prettier --write .",
    "quality": "npm run quality:fix",
    "quality:check": "run-s --print-label --silent lint:check prettier:check",
    "quality:fix": "run-p --print-label --silent lint:fix prettier:fix",
    "serve": "http-server dist",
    "start": "npm-run-all ts -p ts:w demo:w",
    "test": "run-s test:*",
    "test:absolute": "npm run mocha -- -f 'Absolute routes'",
    "test:exclusion": "npm run mocha -- -f 'Exclusion syntax'",
    "test:grandchildren": "npm run mocha -- -f 'Relative grandchildren'",
    "test:partial-exclusion": "npm run mocha -- -f 'Partial exclusion syntax'",
    "test:relative": "npm run mocha -- -f 'Relative routes'",
    "test:relative-exclusion": "npm run mocha -- -f 'Relative exclusion syntax'",
    "ts": "tsc",
    "ts:w": "npm run ts -- -w"
  },
  "files": [
    "_index.scss",
    "lib",
    "sass"
  ],
  "keywords": [
    "react",
    "login",
    "webpack"
  ],
  "peerDependencies": {
    "react": "^18"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/runtime": "^7.19.0",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.1",
    "csso-webpack-plugin": "^2.0.0-beta.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-alloy": "^4.7.0",
    "eslint-plugin-react": "^7.31.8",
    "html-webpack-plugin": "^5.5.0",
    "json2scss-map-webpack-importer": "^1.1.2",
    "mini-css-extract-plugin": "^2.6.1",
    "mocha": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.26.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "prettier-plugin-package": "^1.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "sass-loader": "^13.0.2",
    "serve-static": "^1.14.1",
    "style-loader": "^3.3.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "types": "lib/index.d.ts",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "browserslist": [
    "defaults"
  ],
  "eslintConfig": {
    "extends": [
      "alloy",
      "alloy/react",
      "alloy/typescript"
    ],
    "env": {
      "browser": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "eol-last": [
        "error",
        "always"
      ],
      "no-undef": 0,
      "max-params": [
        "error",
        4
      ],
      "no-param-reassign": 0,
      "@typescript-eslint/prefer-optional-chain": 0
    },
    "ignorePatterns": [
      "lib/*",
      "dist/*",
      "webpack.config.js",
      "output"
    ]
  },
  "prettier": {
    "singleQuote": true
  }
}
